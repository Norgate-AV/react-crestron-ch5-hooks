{
    "root": true,
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "prettier"
    ],
    "plugins": ["react", "@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": true,
        "tsconfigRootDir": ".",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}
