{
    "name": "@norgate-av/react-crestron-ch5-hooks",
    "description": "A collection of Crestron CH5 hooks âš“ for React ðŸ˜€",
    "version": "1.0.0",
    "keywords": [
        "react",
        "hooks",
        "crestron",
        "ch5"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/react-crestron-ch5-hooks.esm.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV/react-crestron-ch5-hooks.git"
    },
    "bugs": {
        "url": "https://github.com/Norgate-AV/react-crestron-ch5-hooks/issues"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "pnpm resolve:crcomlib && tsdx watch",
        "build": "pnpm clean:dist && pnpm resolve:crcomlib && tsdx build --format cjs,esm,umd",
        "test": "pnpm resolve:crcomlib && tsdx test --passWithNoTests",
        "test:watch": "pnpm resolve:crcomlib && tsdx test --passWithNoTests --watch",
        "test:coverage": "pnpm clean:coverage && pnpm resolve:crcomlib && tsdx test --passWithNoTests --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "clean:dist": "rimraf dist",
        "clean:coverage": "rimraf coverage",
        "clean:all": "pnpm clean:dist && pnpm clean:coverage",
        "semantic-release": "semantic-release",
        "commit": "git-cz",
        "pretty:fix": "prettier --write .",
        "resolve:crcomlib": "run-script-os",
        "resolve:crcomlib:default": "./node_modules/node-jq/bin/jq '.main=\"build_bundles/cjs/cr-com-lib.js\"' $npm_package_crestron_crcomlib_packageJson | sponge $npm_package_crestron_crcomlib_packageJson",
        "resolve:crcomlib:windows": "./node_modules/node-jq/bin/jq \".main=\"\"build_bundles/cjs/cr-com-lib.js\"\"\" %npm_package_crestron_crcomlib_packageJson% | sponge %npm_package_crestron_crcomlib_packageJson%",
        "doctoc": "doctoc --title '## Contents ðŸ“–' README.md",
        "contrib:add": "all-contributors add",
        "contrib:generate": "all-contributors generate",
        "contrib:check": "all-contributors check"
    },
    "peerDependencies": {
        "@crestron/ch5-crcomlib": "^1.2.0",
        "@norgate-av/crestron-ch5-helper": "^1.1.0",
        "react": ">=16"
    },
    "size-limit": [
        {
            "path": "dist/react-crestron-ch5-hooks.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-crestron-ch5-hooks.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@crestron/ch5-crcomlib": "^1.2.0",
        "@norgate-av/crestron-ch5-helper": "^1.1.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/git": "^10.0.1",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@testing-library/react": "^13.1.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "@types/react": "^18.0.6",
        "@types/react-dom": "^18.0.2",
        "@types/rimraf": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "all-contributors-cli": "^6.20.0",
        "cz-conventional-changelog": "3.3.0",
        "doctoc": "^2.1.0",
        "eslint": "^8.14.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^16.1.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.3.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.2",
        "node-jq": "^2.3.3",
        "prettier": "^2.6.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "rimraf": "^3.0.2",
        "run-script-os": "^1.1.6",
        "semantic-release": "^19.0.2",
        "size-limit": "^7.0.8",
        "sponge": "^0.1.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3",
        "vitest": "^1.3.1"
    },
    "crestron": {
        "crcomlib": {
            "root": "./node_modules/@crestron/ch5-crcomlib",
            "packageJson": "./node_modules/@crestron/ch5-crcomlib/package.json",
            "bundle": {
                "name": "cr-com-lib.js",
                "path": {
                    "umd": "./node_modules/@crestron/ch5-crcomlib/build_bundles/umd/cr-com-lib.js",
                    "cjs": "build_bundles/cjs/cr-com-lib.js"
                }
            }
        }
    }
}
