{
    "name": "@norgate-av/react-crestron-ch5-hooks",
    "description": "A collection of Crestron CH5 hooks ðŸªðŸª, for React ðŸ˜€",
    "version": "0.0.0-development",
    "keywords": [
        "react",
        "hooks",
        "crestron",
        "ch5"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/react-crestron-ch5-hooks.esm.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV-Solutions-Ltd/react-crestron-ch5-hooks.git"
    },
    "bugs": {
        "url": "https://github.com/Norgate-AV-Solutions-Ltd/react-crestron-ch5-hooks/issues"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "start": "yarn resolve:crcomlib && tsdx watch",
        "build": "yarn clean && yarn resolve:crcomlib && tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "lint:fix": "tsdx lint --fix",
        "prepare": "husky install",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "clean": "rimraf dist",
        "semantic-release": "semantic-release",
        "commit": "git-cz",
        "pretty:fix": "prettier --write .",
        "resolve:crcomlib": "./node-modules/node-jq/bin/jq '.main = \"build_bundles/cjs/cr-com-lib.js\"' $npm_package_crestron_crcomlib_packageJson | sponge $npm_package_crestron_crcomlib_packageJson"
    },
    "peerDependencies": {
        "@crestron/ch5-crcomlib": "^1.2.0",
        "@norgate-av/crestron-ch5-helper": "^1.1.0",
        "react": ">=16"
    },
    "size-limit": [
        {
            "path": "dist/react-crestron-ch5-hooks.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-crestron-ch5-hooks.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@crestron/ch5-crcomlib": "^1.2.0",
        "@norgate-av/crestron-ch5-helper": "^1.1.0",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/react": "^18.0.3",
        "@types/react-dom": "^18.0.0",
        "@types/rimraf": "^3.0.2",
        "cz-conventional-changelog": "3.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.5",
        "node-jq": "^2.3.3",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "rimraf": "^3.0.2",
        "semantic-release": "^19.0.2",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "crestron": {
        "crcomlib": {
            "root": "./node_modules/@crestron/ch5-crcomlib",
            "packageJson": "./node_modules/@crestron/ch5-crcomlib/package.json",
            "bundle": {
                "name": "cr-com-lib.js",
                "path": {
                    "umd": "./node_modules/@crestron/ch5-crcomlib/build_bundles/umd/cr-com-lib.js",
                    "cjs": "build_bundles/cjs/cr-com-lib.js"
                }
            }
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "yarn lint:fix",
            "yarn pretty:fix"
        ],
        "*.{css,scss,md,html,json,yml,yaml}": [
            "yarn pretty:fix"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
